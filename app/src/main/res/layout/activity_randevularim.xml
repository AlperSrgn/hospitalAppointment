<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Randevularim">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/takvim"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/ad"/>

    <TextView
        android:id="@+id/dbAd"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/soyad"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dbSoyad"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/alan_secim"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dbAlan"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/hastane_secim"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dbHastane"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/tarih"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dbTarih"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/saat_secim"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:id="@+id/dbSaat"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/randevu_sil"
        android:id="@+id/randevuSilBtn"
        android:textColor="@color/white"
        android:background="@drawable/border"
        android:backgroundTint="@android:color/holo_red_light" />

</LinearLayout>