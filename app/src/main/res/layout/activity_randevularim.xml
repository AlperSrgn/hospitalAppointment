<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Randevularim">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/takvim"
        android:layout_marginBottom="30dp"/>


    <EditText
        android:id="@+id/tcKimlikNo"
        android:hint="@string/tc_kimlik_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_verified_user_24" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/randevu_ara"
        android:id="@+id/randevuAraBtn"
        android:backgroundTint="@color/design_default_color_secondary" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/ad"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dbAd"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/soyad"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dbSoyad"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/sehir_secimi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dbSehir"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/hastane_secim"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dbHastane"/>

</LinearLayout>